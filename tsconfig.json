{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "lib": ["ESNext", "DOM"],

    "types": ["jest", "node"],

    "baseUrl": ".",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./packages/*"],
      "$fs": ["./packages/fs/fs.ts"]
    }
  },
  "include": ["**/*.ts"]
}
