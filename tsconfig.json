{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es2015",

    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "lib": ["ESNext", "DOM"],

    "types": ["jest", "node"],

    "baseUrl": ".",

    "paths": {
      "~/*": ["./packages/*"]
    }
  },
  "include": ["**/*.ts"]
}
